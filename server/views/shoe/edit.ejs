<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->
<div class="container"></div>
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Brand</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the shoe brand" name="Brand" value="<%= Shoe.Brand %>" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Size</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the shoe size" name="Size" value="<%= Shoe.Size %>" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Color</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the shoe color" name="Color" value="<%= Shoe.Color %>" required>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Shoe Price" name="Price" value="<%= Shoe.Price %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>