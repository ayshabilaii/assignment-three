<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Book Database-->
 <!-- Intro Section -->
  <section class="intro-section">
    <div class="text-content">
      <h2>Add, delete, and edit!</h2>
      <h1>Keep track of what shoes you own by adding it here!</h1>
    </div>
  </section>
</main>

<div class="container">
    <!-- Add Shoe Button -->
    <div class="text-right mb-3">
        <a href="/shoeslist/add" class="btn btn-primary" role="button">
            <i class="fas fa-cart-plus"></i> Add Shoe
        </a>
    </div>

    <!-- Cards for ShoeList -->
    <div class="row">
        <% for(let count = 0; count < ShoeList.length; count++) { %>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <!-- card header, displays shoes brand in the center --> 
                <div class="card-header text-center">
                    <h5><%= ShoeList[count].Brand %></h5>
                </div>
                <div class="card-body">
                    <p><strong>Size:</strong> <%= ShoeList[count].Size %></p>
                    <p><strong>Color:</strong> <%= ShoeList[count].Color %></p>
                    <p><strong>Price:</strong> $<%= ShoeList[count].Price.toFixed(2) %></p>
                    <div class="text-center">
                        <a href="/shoeslist/edit/<%= ShoeList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <!-- delete button with confirmation -->
                        <a href="/shoeslist/delete/<%= ShoeList[count]._id %>" class="btn btn-danger btn-sm"
                            onclick="return confirm('Are you sure you want to delete this item?');">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>
<%- include ../Partials/footer.ejs%>