<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Book Database-->
<div class="container">
    <!-- Add Shoe Button -->
    <div class="text-right mb-3">
        <a href="/bookslist/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i> Add Shoe
        </a>
    </div>

    <!-- Cards for BookList -->
    <div class="row">
        <% for(let count = 0; count < BookList.length; count++) { %>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm"> 
                <div class="card-header text-center">
                    <h5><%= BookList[count].Brand %></h5>
                </div>
                <div class="card-body">
                    <p><strong>Size:</strong> <%= BookList[count].Size %></p>
                    <p><strong>Color:</strong> <%= BookList[count].Color %></p>
                    <p><strong>Price:</strong> $<%= BookList[count].Price.toFixed(2) %></p>
                    <div class="text-center">
                        <a href="/bookslist/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="/bookslist/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm"
                            onclick="return confirm('Are you sure you want to delete this item?');">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
</div>
<%- include ../Partials/footer.ejs%>