<%- include Partials/header.ejs%>
<%- include Partials/main_nav.ejs%>

<!-- Intro Section -->
<section class="intro-section">
    <div class="text-content">
        <h2>Shoes you own!</h2>
        <h1>The shoes you currently own are displayed here.</h1>
    </div>
</section> 

<!-- Shoe Database -->
    <main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <tr class="d-flex">
                    <th class="text-center col-2">Brand</th>
                    <th class="text-center col-2">Size</th>
                    <th class="text-center col-1">Color</th>
                    <th class="text-center col-1">Price</th>
                </tr>
                <% for(let count=0;count<ShoeList.length;count++) { %>
                <tr class="d-flex">
                    <td class="text-center col-2"><%= ShoeList[count].Brand %></td>
                    <td class="text-center col-2"><%= ShoeList[count].Size %></td>
                    <td class="text-center col-1"><%= ShoeList[count].Color%></td>
                    <td class="text-center col-1"><%= ShoeList[count].Price %></td>
                    </td>  
                    <%} %>
                </tr>  
            </table>
        </div>
    </div>
</main>

<%- include Partials/footer.ejs%>