<%- include Partials/header.ejs%>
<%- include Partials/main_nav.ejs%>

<!-- Intro Section -->
<section class="intro-section">
    <div class="text-content">
        <h2>Shoes you own!</h2>
        <h1>The shoes you currently own are displayed here.</h1>
    </div>
</section>

<!-- Shoe Database -->
<section class="shoe-database">
    <table>
        <thead>
            <tr>
                <th>Brand</th>
                <th>Size</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <% for (let shoe of ShoeList) { %>
                <tr>
                    <td><%= shoe.Brand %></td>
                    <td><%= shoe.Size %></td>
                    <td><%= shoe.Price ? `$${shoe.Price}` : 'N/A' %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</section>

<%- include Partials/footer.ejs%>